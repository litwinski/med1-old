$("#abuso_observacao").val("");
$("#denunciar_abuso").modal("hide");
<% if @comentario.present? %>
	$('#comentario_'+<%= @comentario.id %>).fadeOut('slow');
	$("#comentario_"+<%= @comentario.id %>).next().fadeOut('slow');
<% else %>
	$('#conteudo_'+<%= @conteudo.id %>).fadeOut('slow');
	$("#conteudo_"+<%= @conteudo.id %>).prev().fadeOut('slow');
	$("#conteudo_"+<%= @conteudo.id %>).next().next().next().fadeOut('slow');
	$("#conteudo_"+<%= @conteudo.id %>).next().next().fadeOut('slow');	
<% end %>
