
<div class="row-fluid">
	<div class="row-fluid">
		<div class="span9">
			<h3>
				<%= @searchs.size %> resultado(s) encontrado(s) com "<%= params[:m] %>"
			</h3>
		</div>
		<div class="span3">
			<%= select_tag "ordena_resultado", "<option value='301'>Data</option><option value='302'>TÃ­tulo</option>".html_safe, :prompt => "Ordenar por..", :class => "right input-medium" %>
		</div>
	</div>
	<hr />
	<% @searchs.each do |search| %>
		<div class="row-fluid">
			<div class="span11">
				<div class="sub-titulo">
						<%= search.url.html_safe %>
				</div>
			</div>
		</div>
		<hr />
	<% end %>
	<div class="btn-toolbar">
	  <div class="btn-group">
			<%= will_paginate @searchs, :class => "med1-paginate" %>
		</div>
	</div>
</div>

<script type="text/javascript" charset="utf-8">
	$("#ordena_resultado").change(function(){
		var url = location.search.split('&ordem');
		location.search = url[0]+"&ordem="+this.value; 
	});
</script>