<%= form_for(@grupo_discussao, :class => "form-inline", :html => {:multipart => true}) do |f| %>
	<%= error_messages_for @grupo_discussao %>

	<div class="clearfix">
		<%= f.label :nome %>
		<div class="input">
	      <%= f.text_field :nome %>
	    </div>
	</div>
	<div class="clearfix">
		<%= f.label :descricao %>
		<div class="input">
	      <%= f.text_area :descricao, :size => "8x9", :class => "span7" %>
	    </div>
	</div>
	<div class="clearfix">
		<div class="input">
 		<%= f.check_box :privado %><%= f.label :privado , :style => "display:inline;margin-left:5px;position:relative;top:3px"%>
	    </div>
	</div>	
	<div class="clearfix">

		<div class="input">
 			<%= f.check_box :ativo %><%= f.label :ativo , :style => "display:inline;margin-left:5px;position:relative;top:3px"%>
	    </div>
	</div>
	<div class="clearfix">
		<%= f.label :avatar %>
		<div class="input">
	      <%= f.file_field :avatar %><br/>
		  <%= image_tag(@grupo_discussao.avatar.url(:mini)) if @grupo_discussao.avatar? %>
	    </div>
	</div>
	<div class="clearfix">
		<div class="form-actions">
	    <%= link_to "Cancelar", grupo_discussoes_path, :class => "btn btn-danger" %>
			<%= f.submit "Salvar", :class => "btn btn-success", :disable_with => "Salvando..." %>
	  </div>
	</div>
<% end %>
