<% if resources.present? %>
	<table class="med1">
		<thead>
			<tr>
				<th colspan="3"><%= titulo if resources.size > 0 %></th>
			<tr>
		</thead>
		<tbody>
			<% resources.each do |resource| %>
			<tr id="mini_profile_row_<%=resource.id%>">
				<td style="width:12%;">
					<ul class="thumbnails" style="height:30px">
				    <li style="height:24px;">
				    	<a href="/profissionais/<%= resource.slug %>" class="thumbnail">
								<% if resource.avatar.url(:thumb) %>
									<%=image_tag(resource.avatar.url(:mini,false), :size => "30x30") %>
								<% else %>
									<%= image_tag('avatar.png', :size => "30x30") %>
								<% end%>
				    	</a>
				    </li>
			    </ul>
				</td>
				<td style="padding-left:5px">
					<%= "#{resource.nome}" %> <%= "(#{resource.email})" if resource.permissao_email %>
				</td>
				<td style="padding-left:5px; width:12%;">
					<%= link_operacao.call(resource) %>					
				</td>
			</tr>
			<% end %>	
		</tbody>
	</table>
<% end %>