	$("#ul_area").css("float", "left");
	
	$('a[id^="item_area"]').click(function(){
		bloquearTela();
		$.ajax({
		  url: "/ajax/salvar_permissao?permissao_area=" + $(this).attr("chave"),
		  context : this,
		  success: function(){			
			$.unblockUI();
		  }
		});
	})
</script>