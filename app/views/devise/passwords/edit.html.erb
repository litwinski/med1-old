<br/>
<div class="row hero-unit">
  <h2>Informe sua nova senha</h2>
  <br/>
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => "form-stacked", :method => :put }) do |f| %>
	  <%= devise_error_messages! %>
	  <%= f.hidden_field :reset_password_token %>

	  <label>Nova senha*</label>
	  <%= f.password_field :password %><br/><br/>

	  <label>Confirmar nova senha*</label>
	  <%= f.password_field :password_confirmation %><br/><br/>

	  <%= f.submit "Alterar", :class => "btn" %>
	<% end %>
</div>