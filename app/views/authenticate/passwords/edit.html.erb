<h1 style="text-align:center;color:#51517F">Alterar Senha</h1>
<br/>
<div class="row-fluid">
	<div class="span2"></div>
	<div class="span4 well" style="background-color:#fff;border:1px solid #D9E1FD">
	    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => "form-stacked", :method => :put }) do |f| %>
		 <%= f.hidden_field :reset_password_token %>
	  	 <h2>Informe a nova senha</h2>
	  	 <br/>
	  	 
		 <%= f.password_field :password, :placeholder => "Nova senha", :class => "estatico" %>
		 <br/><br/>
		 
		 <%= f.password_field :password_confirmation, :placeholder => "Confirmar nova senha", :class => "estatico"  %><br/><br/>
		 
	  	 <%= f.submit "Alterar", :class => "btn btn-success", :style=>"width:100%;height:40px", :disable_with => "Aguarde..." %>
	    <% end %>
	</div>	
	<%=render :partial => 'shared/social_login'%>	
</div>
<div class="row-fluid">
	<div class="span2"></div>
	<div class="span8 well" style="background-color:#fff;border:1px solid #D9E1FD">
		<p class="estatico" style="font-size:18px;font-weight:bolder;margin-top:8px;">Ainda não tem um usuário cadastrado no Med1? 
			<%= link_to "Cadastre-se", new_registration_path(resource_name) , :style => "color:#009900" %>
		</p>
	</div>
	<div class="span2">
	</div>
</div>
</div>