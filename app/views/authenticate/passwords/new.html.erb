<h1 style="text-align:center;color:#51517F">Esqueceu a sua senha?</h1>
<br/>
<div class="row-fluid">
	<div class="span2"></div>
	<div class="span4 well" style="background-color:#fff;border:1px solid #D9E1FD">
	    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => "form-stacked", :method => :post }) do |f| %>
	  	 <h2>Informe seu e-mail</h2>
	  	<br/>
	  	 <%= f.email_field :email, :placeholder => "E-mail utilizado para logar no Med1", :class => "estatico" %>
		 <br/><br/>
	  	 <%= f.submit "Enviar", :class => "btn btn-success", :style=>"width:100%;height:40px", :disable_with => "Enviando..." %>
	    <% end %>		
	</div>
	<%=render :partial => 'shared/social_login'%>
</div>
<div class="row-fluid">
	<div class="span2"></div>
	<div class="span8 well" style="background-color:#fff;border:1px solid #D9E1FD">
		<p class="estatico" style="font-size:18px;font-weight:bolder;margin-top:8px;">Ainda não tem um usuário cadastrado no Med1? 
			<%= link_to "Cadastre-se", new_registration_path(resource_name) , :style => "color:#009900" %>
		</p>
	</div>
	<div class="span2">
	</div>
</div>
</div>