<% if resource.errors.any? %>
<div class="clearfix">
  <div class="alert alert-error">
    <h3 style="color: red;"><%= pluralize(resource.errors.count, "erro") %>:</h3>
    <ul>
    <% resource.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
</div>
<% end %>